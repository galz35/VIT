# Podfile con parche para Firebase y paridad con Flutter Moderno
platform :ios, '13.0'

# Evitar que Flutter intente "actualizar/sobrescribir" este archivo
# con el comando 'Upgrading Podfile'
install! 'cocoapods', :deterministic_uuids => false

target 'Runner' do
  # Firebase Messaging requiere static linkage en muchos casos
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Parche crítico para cada target de pod (incluyendo Firebase)
    target.build_configurations.each do |config|
      # Esta es la cura para: 'Include of non-modular header inside framework module'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      
      # Asegurar compatibilidad
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end

  # También aplicarlo al proyecto base de los Pods por si acaso
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
  end
end
