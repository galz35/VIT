# Podfile con parche para Firebase y paridad con Flutter Moderno
platform :ios, '13.0'

# Marcas necesarias para que Flutter no intente "Upgrading Podfile"
# [!] NO ELIMINAR ESTA LINEA: flutter_install_all_ios_pods

install! 'cocoapods', :deterministic_uuids => false

target 'Runner' do
  # Firebase Messaging requiere static linkage
  use_frameworks! :linkage => :static
  
  # Habilitar headers modulares para todos los pods
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # Esta es la cura definitiva para: 'Include of non-modular header'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
      
      # Forzar version minima para evitar warnings de pods antiguos
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
